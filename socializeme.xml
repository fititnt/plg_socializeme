<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content" method="upgrade">
    <name>PLG_SOCIALIZEME</name>
    <author>Emerson Rocha Luiz</author>
    <creationDate>2011-07-29</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
    <license>GPL3</license>
    <authorEmail>emerson@webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <version>0.2alpha</version>
    <description>PLG_SOCIALIZEME_DESCRIPTION</description>

    <files>
        <filename plugin="socializeme">socializeme.php</filename>
        <filename>index.html</filename>
        <filename>readme.txt</filename>
        <folder>css</folder>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_socializeme.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_socializeme.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="showfacebookcomments" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWFACEBOOKCOMMENT_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWFACEBOOKCOMMENT_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showfacebooklike" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWFACEBOOKLIKE_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWFACEBOOKLIKE_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showgoogleplus" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWGOOGLEPLUS_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWGOOGLEPLUS_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showtwittertweet" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWTWITTERTWEET_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWTWITTERTWEET_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="FACEBOOKCOMMENTS">

            
            </fieldset>
            
            <fieldset name="FACEBOOKBUTTON">

            
            </fieldset>
            <fieldset name="GOOGLEPLUS">

            
            </fieldset>
            <fieldset name="TWITTERBUTTON">
                <field name="ttb-count" 
                        type="list" 
                        default="vertical" 
                        label="PLG_SOCIALIZEME_TTB_COUNT_LABEL" 
                        description="PLG_SOCIALIZEME_TTB_COUNT_DESC">
                  <option value="none">PLG_SOCIALIZEME_TTB_COUNT_NONE</option>
                  <option value="horizontal">PLG_SOCIALIZEME_TTB_COUNT_HORIZONTAL</option>
                  <option value="vertical">PLG_SOCIALIZEME_TTB_COUNT_VERTICAL</option>
                </field>
                <field name="ttb-via" 
                        type="text" 
                        default="" 
                        label="PLG_SOCIALIZEME_TTB_VIA_LABEL" 
                        description="PLG_SOCIALIZEME_TTB_VIA_DESC">
                </field>
                <field name="ttb-related" 
                        type="text" 
                        default="" 
                        label="PLG_SOCIALIZEME_TTB_RELATED_LABEL" 
                        description="PLG_SOCIALIZEME_TTB_RELATED_DESC">
                </field>
                <field name="ttb-lang" 
                        type="text" 
                        default="" 
                        label="PLG_SOCIALIZEME_TTB_LANG_LABEL" 
                        description="PLG_SOCIALIZEME_TTB_LANG_DESC">
                </field>
            
            </fieldset>
            <fieldset name="VISUAL">
                <field name="showbuttonscount" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWBUTTONSCOUNT_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWBUTTONSCOUNT_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showbuttonsbig" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWBUTTONSBIG_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWBUTTONSBIG_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showbuttonsafter" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWBUTTONSAFTER_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWBUTTONSAFTER_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showbuttonsleft" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWBUTTONSLEFT_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWBUTTONSLEFT_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
                <field name="showbuttonshorizoltal" 
                        type="radio" 
                        default="1" 
                        label="PLG_SOCIALIZEME_SHOWBUTTONSHORIZOLTAL_LABEL" 
                        description="PLG_SOCIALIZEME_SHOWBUTTONSHORIZOLTAL_DESC">
                  <option value="1">JYES</option>
                  <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
